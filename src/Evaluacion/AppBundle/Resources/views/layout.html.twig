{# AppBundle/Resources/views/layout.html.twig   Layout del bundle App #}

{% extends '::base.html.twig' %}
{% block cabecera %}
    {% block stylesheets %}
        {% stylesheets 
            '@AppBundle/Resources/public/css/bootstrap-responsive.min.css'
            '@AppBundle/Resources/public/css/bootstrap.min.css'
            '@AppBundle/Resources/public/css/docs.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
{% endblock %}
{% block javascripts %}
    {% javascripts    
        '@AppBundle/Resources/public/js/jquery.js'
        '@AppBundle/Resources/public/js/bootstrap.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}