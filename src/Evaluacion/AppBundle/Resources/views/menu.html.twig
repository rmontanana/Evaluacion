{# AppBundle/Resources/views/menu.html.twig Bloque que construye el menú #}


    {# Crea el menú de la aplicación #}
    <ul class="nav">
        <li class="divider-vertical"></li>
        {% for opcion, dato in menu %}
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ opcion }}<b class="caret"></b></a>
            <ul class="dropdown-menu">
            {% for op, dat in dato %}
                <li><a href="{{ dat }}">{{ op }}</a></li>
            {% endfor %}
            </ul>
            </li>
        {% endfor %}            
        <li class="divider-vertical"></li>           
    </ul>
