{# AppBundle/Resources/views/index.html.twig #}

{% extends 'AppBundle::layout.html.twig' %}

{% block titulo %}Índice{% endblock %} 

{% block centro %}I.E.S.O. Pascual Serrano{% endblock %}

{% block usuario %}Ricardo Montañana Gómez<a href="#"> (salir)</a>{% endblock %}

{% block menu %} 
    {# Crea el menú de la aplicación #}
    <ul class="nav">
        <li class="divider-vertical"></li>
        {% for opcion, dato in menu %}
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ opcion }}<b class="caret"></b></a>
            <ul class="dropdown-menu">
            {% for op, dat in dato %}
                <li><a href="{{ dat }}">{{ op }}</a></li>
            {% endfor %}
            </ul>
            </li>
        {% endfor %}            
        <li class="divider-vertical"></li>           
    </ul>
{% endblock %}

{% block cuerpo %}
    Hello {{ name }}!
{% endblock %}